<!DOCTYPE html>

<html>
    <head>
        <title>My todolist</title>
        <style>
            a {text-decoration: none; color: black;}
        </style>
    </head>

    <body>
        <h1>My todolist</h1>
        <ul>
        <% todolist.forEach(function(todo, index) { %>
            <li>
              <a href="/todo/delete/<%= index %>">âœ˜</a> <b><%- todo %></b>
              <form action="/todo/edit/<%= index %>" method="post">
                <p>
                  <label for="edittodo">Edit your todo</label>
                  <input type="text" name="edittodo" id="edittodo" autofocus placeholder="<%- todo %>" />
                  <input type="submit" />
                </p>
              </form>
            </li>
        <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">What shoud I do?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" />
            </p>
        </form>
    </body>
</html>
